<h1>Contact Information</h1>
<h3><%= @contact.name %></h3>
<h5>Email(s):</h5>
<ul>
  <%@contact.emails.each do |email|%>
  <li><%= email.email() %></li>
  <%end%>
</ul>
<h5>Phone Number(s):</h5>
<ul>
  <%@contact.phone_numbers.each do |phone_number|%>
  <li><%= phone_number.phone_number() %></li>
  <%end%>
</ul>
<h5>Address(es):</h5>
<ul>
  <%@contact.addresses.each do |address|%>
  <li><%= address.address() %></li>
  <%end%>
</ul>
<hr>
<h3>Add contact info:</h3>
<form action="/contact/<%= @contact.id %>/add">
  <label>Contact Email</label>
  <input type="text" name="contact-email">
  <label>Contact Phone</label>
  <input type="text" name="contact-phone">
  <label>Contact Address</label>
  <input type="text" name="contact-address">
  <button type="submit" name="add-contact-details-button" class="btn btn-info">Add Contact Details</button>
</form>

<hr>
<a href='/'>Go Home!</a>
<a href='/contacts'>Contact List</a>
